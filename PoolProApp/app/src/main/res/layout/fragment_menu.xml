<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/pool_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Pool Name"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="30dp"
        android:background="@color/grey" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/pool_name_text_view"
        android:layout_above="@id/button_remove_pool"/>

    <TextView
        android:id="@+id/pool_capacity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pool_capacity"
        android:textSize="20sp"
        android:layout_above="@id/button_remove_pool"
        android:layout_marginBottom="16dp"
        android:gravity="center" />



    <Button
        android:id="@+id/button_remove_pool"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/remove_a_pool"
        android:backgroundTint="@color/red"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"/>


</RelativeLayout>

