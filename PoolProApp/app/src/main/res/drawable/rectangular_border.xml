<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <!-- Set blue color for the background -->
    <solid android:color="@color/pool_blue"/>

    <!-- Define padding to create space within the border -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>

    <!-- Add a stroke to create the border -->
    <stroke
        android:color="@color/black"
        android:width="1dp"/>

    <!-- Add rounded corners if needed -->
    <corners android:radius="8dp"/>
</shape>
